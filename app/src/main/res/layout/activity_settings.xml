<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape7"
    android:padding="5dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_timeMaster"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="时间大师"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="@drawable/shape5"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_permission"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="获取权限"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_ignore"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="忽略名单"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_usageLog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="使用日志"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_passwordIn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="导入密码"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_passwordOut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="导出密码"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_get"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="获取数据"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="保存数据"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/layout_admin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="清空数据"
            android:textSize="25sp"
            android:gravity="left|center_vertical"
            android:background="#55ffff"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btn_parameter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="自由时间"
            android:textSize="25sp"
            android:gravity="left|center_vertical"
            android:background="#55ffff"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出"
            android:textSize="25sp"
            android:gravity="left|center_vertical"
            android:background="#55ffff"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="帮助"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="#55ffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="关于"
        android:textSize="25sp"
        android:gravity="left|center_vertical"
        android:background="@drawable/shape6"
        android:padding="10dp"/>

</LinearLayout>